<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.csddm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".menu.MenuActivity"
                    android:label="Menu Activity"
                    android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".MenuActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ListeningMusicActivity"
            android:label="Listening Music"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".ListeningMusic" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ToDrawActivity"
            android:label="To Draw"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".ToDraw" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".drawface.DrawActivity"
            android:label="Draw"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".Draw" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:label="Login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".Login" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
            android:label="Register"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".Register" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>